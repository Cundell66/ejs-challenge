<%- include("partials/header.ejs") %>

<h1> Home </h1>
<p> <%= content %></p>
<% if (posts && posts.length > 0) { %>
     <% posts.forEach(post => { %>
        <h2><%= post.title %></h2>
        <p><%= post.content.substring(0,100) + "..." %>
            <a href="/post/<%= post.title.toLowerCase() %>">Read More</a></p>
    <% }) %>
<% } %>

